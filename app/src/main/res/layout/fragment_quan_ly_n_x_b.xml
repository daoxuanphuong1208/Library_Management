<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img"
    tools:context=".fragment.QuanLyNXBFragment">



    <LinearLayout
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/quan_btn_them_nha_xb"
        android:id="@+id/btnthemnxb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/quan_ic_add_24" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm nhà XB"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:stretchColumns="*"
            android:background="@color/white"
            android:layout_height="40dp">

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView6"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:text="Mã"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Tên" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView8"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView9"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Quốc gia" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView10"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action" />
            </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/listviewnhaxb"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>