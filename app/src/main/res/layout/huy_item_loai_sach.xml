<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myCartView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#CDCDC0"
    app:cardCornerRadius="40dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageLoaiSach"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/bookicon" />

        <TextView
            android:id="@+id/nameLoaiSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLoaiSach"
            android:text="Name wanter"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#3D4446"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/soLuongSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameLoaiSach"
            android:text="price wanter"
            android:textAlignment="center"
            android:textColor="#3D4446"
            android:layout_marginBottom="10dp"
            android:textSize="15dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
