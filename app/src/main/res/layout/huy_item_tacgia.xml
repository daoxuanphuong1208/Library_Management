<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="40dp"
    android:id="@+id/rowTacGia"
    android:divider="@android:drawable/divider_horizontal_bright"
    >

    <TextView
        android:id="@+id/txtMaTacGia"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="0"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtTenTacGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtGioiTinhTacGia"
        android:background="@drawable/huy_custom_gender"
        android:layout_width="42dp"
        android:textAlignment="center"
        android:textColor="#1F9254"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSuaTacGia"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/quan_icedit_tacgia" />


        <TextView
            android:id="@+id/txtXoaTacGia"
            android:layout_width="13dp"
            android:layout_marginStart="10dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/quan_icbin_tacgia"
            />
    </LinearLayout>
</TableRow>