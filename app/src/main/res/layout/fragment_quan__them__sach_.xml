<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Quan_Them_Sach_Fragment">

    <!-- Toolbar cố định -->
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thêm sách"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center" />
    </Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragment.Quan_Them_Sach_Fragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imganhthemsach"
                        android:layout_width="390dp"
                        android:layout_height="192dp"
                        android:layout_weight="1"
                        android:src="@drawable/logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#ff0"
                            android:gravity="center"
                            android:text="Thêm ảnh"
                            android:textColor="#F4511E"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btncamera"
                            android:layout_width="102dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/quan_btntrasach"
                            android:src="@drawable/quan_ic_photo_camera_24" />

                        <ImageButton
                            android:id="@+id/btnfolder"
                            android:layout_width="102dp"
                            android:layout_height="66dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/quan_btntrasach"
                            android:src="@drawable/quan_ic_folder_24" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp">


                    <TableLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Tên sách"

                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edtthemtensach"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/quan_txt_them_sach"
                                android:ems="10"
                                android:hint="Nhập tên sách"
                                android:inputType="text"
                                android:padding="5dp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Thể loại"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnertheloai"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/quan_txt_them_sach"
                                tools:ignore="TouchTargetSizeCheck" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Tác giả"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnertacgia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/quan_txt_them_sach"
                                android:ems="10"
                                android:inputType="text"
                                android:text="Name" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Tóm tắt"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edtthemtomtat"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:background="@drawable/quan_txt_them_sach"
                                android:ems="10"
                                android:gravity="start|top"
                                android:hint="Nhập tóm tắt"
                                android:inputType="textMultiLine"
                                android:padding="5dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Ngày xuất bản"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edtthemngayxb"
                                android:layout_width="85dp"
                                android:layout_height="30dp"
                                android:background="@drawable/quan_txt_them_sach"
                                android:ems="10"
                                android:hint="Chọn ngày tháng năm"
                                android:inputType="date"
                                android:padding="5dp"
                                tools:ignore="TouchTargetSizeCheck" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Nhà xuất bản"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnernhaxb"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/quan_txt_them_sach"
                                tools:ignore="TouchTargetSizeCheck" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Số lượng"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edtthemsoluong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/quan_txt_them_sach"
                                android:ems="10"
                                android:hint="Nhập số lượng"
                                android:inputType="number"
                                android:padding="5dp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnthemthemsach"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/quan_btn_huy_muon_sach"
                    android:padding="5dp"
                    android:text="Thêm"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>