<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa kệ sách"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#EF2D2D"/>

        <TextView
            android:id="@+id/txtSuaTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Sửa tên "
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:textColor="#050505"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/baseline_edit_24"
            />

        <TextView
            android:id="@+id/txtXoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/icbin"
            android:drawablePadding="4dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:text=" Xóa  "
            android:textColor="#050505"
            android:textSize="39dp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDialogCancel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Thoát"
            android:textSize="12dp"
            android:layout_gravity="right"
            android:textColor="#00B0FF"
            app:strokeWidth="2dp"
            app:strokeColor="#00B0FF"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>