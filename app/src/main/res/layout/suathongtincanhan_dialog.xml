<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.DoiThongTinCaNhanFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            app:srcCompat="@drawable/logo"
            />

        <TextView
            android:id="@+id/tvTenQuanLymoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#D80B0B"
            android:textSize="28dp"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#707070" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#707070" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="151dp"
                    android:layout_height="43dp"
                    android:drawableStart="@drawable/baseline_code_24"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Mã Quản Lý: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvMaQuanLymoi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#0771C5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="151dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/baseline_date_range_24"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Ngày Sinh: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvNgaySinhmoi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#0771C5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="151dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/baseline_male_24"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Giới Tính: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerGioiTinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#0771C5" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="151dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/baseline_location_on_24"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Địa Chỉ: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvDiaChimoi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#0771C5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="151dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/baseline_phone_24"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Số điện thoại: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvSoDienThoaimoi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#0771C5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/baseline_alternate_email_24"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="Email: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvEmailmoi"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TextView"
                    android:inputType="textMultiLine"
                    android:textAlignment="textStart"
                    android:textColor="#0771C5" />
            </TableRow>

<!--            <TableRow-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginStart="10dp"-->
<!--                >-->

<!--                <Button-->
<!--                    android:id="@+id/btnThoatSuaThongTinCaNhan"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:background="@drawable/thai_btn_thoat_dnhap"-->
<!--                    android:text="QUAY LẠI"-->
<!--                    android:textColor="#D80909" />-->

<!--                <Button-->
<!--                    android:layout_weight="2"-->
<!--                    android:id="@+id/btnXacNhanSuaThongTinCaNhan"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_marginStart="20dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    app:backgroundTint="@null"-->
<!--                    android:background="@drawable/background_btn"-->
<!--                    android:text="XÁC NHẬN SỬA"-->
<!--                    android:textColor="@color/white" />-->
<!--            </TableRow>-->


        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:paddingBottom="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThoatSuaThongTinCaNhan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Thoát"
                android:textSize="12dp"
                android:textColor="#00B0FF"
                app:strokeWidth="2dp"
                app:strokeColor="#00B0FF"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="10dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnXacNhanSuaThongTinCaNhan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:backgroundTint="#C8D11818"
                android:text="XÁC NHẬN SỬA"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold"
                app:strokeColor="#00B0FF"
                app:strokeWidth="2dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>