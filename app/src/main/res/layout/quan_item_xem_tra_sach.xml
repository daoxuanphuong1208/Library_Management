<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="#F7F6FE"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtmamuonsach"
        android:layout_width="30sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="17sp"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txttendangnhapmuon"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:textSize="15dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:text="Nhà xuất bản 1" />

    <TextView
        android:id="@+id/txttensachmuon"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="175 Tây Sơn - Đống Đa - Hà Nội" />

    <TextView
        android:id="@+id/txtsoluongmuon"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="VN"
        android:textColor="#7CB342"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/txtngaydamuon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:text="VN"
        android:textColor="#7CB342"
        android:textSize="17sp" />

</LinearLayout>