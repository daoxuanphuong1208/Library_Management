<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".fragment.XemThongTinTraSachFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txttimkiemtrasach"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="@drawable/quan_txt_timkiem_sach"
                android:hint="Nhập tên đăng nhập"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtmamuonsachtt1"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mã mượn"
                android:textColor="#ff00"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtnguoimuonsach1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Tên đăng nhập"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Tên sách mượn"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtsoluongmuon1"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Số lượng"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtngaymuonsach1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Ngày mượn"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/listviewtrasach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>